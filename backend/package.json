{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "algoliasearch": "^3.34.0",
    "axios": "^0.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.1",
    "class-validator": "^0.10.0",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.15.4",
    "helmet": "^3.21.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.19",
    "@types/algoliasearch": "^3.34.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/morgan": "^1.7.37",
    "@types/node": "^8.0.29",
    "@types/pg": "^7.11.1"
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "ts-node": "3.3.0",
    "ts-node-dev": "^1.0.0-pre.42",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "set debug=* && ts-node-dev --respawn --transpileOnly -r dotenv/config ./src/index.ts dotenv_config_path='../.env'",
    "lint": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typeorm": "ts-node -r tsconfig-paths/register ../node_modules/typeorm/cli.js",
    "production": "tsc && node -r dotenv/config build/src/index.js dotenv_config_path='../.env'",
    "scrape": "ts-node -r dotenv/config ./src/scraper/index.ts dotenv_config_path='../.env'",
    "scrape:stub": "ts-node -r dotenv/config ./src/scraper/stub.ts dotenv_config_path='../.env'",
    "algolia": "ts-node -r dotenv/config ./src/utils/algolia.ts dotenv_config_path='../.env'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
